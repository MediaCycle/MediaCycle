PortSystem                      1.0
PortGroup                       cmake 1.0

name                            armadillo
version                         3.4.4
set branch                      ${version}
categories                      science
platforms                       darwin
maintainers                     nomaintainer

description                     Armadillo C++ linear algebra library

long_description                Armadillo is a C++ linear algebra library (matrix maths) \
                                aiming towards a good balance between speed and ease of use. \
                                Integer, floating point and complex numbers are supported, \
                                as well as a subset of trigonometric and statistics functions. \
                                Various matrix decompositions are provided through optional \
                                integration with LAPACK or high-performance LAPACK-compatible \
                                libraries.

homepage                        http://arma.sf.net
master_sites                    sourceforge:project/arma
use_bzip2                       no
distname                        armadillo-${version}

checksums                       md5     93a45131f8e5ee6393d962f33fdc92a6 \
                                sha1    e293a56695e7447cf5caa395932f1f0d41e13ffc \
                                rmd160  609feb82b1bbe52c1fac11a9f845b581ab245412

depends_build-append            port:pkgconfig

depends_lib-append              port:boost

livecheck.type                  sourceforge
livecheck.name                  arma
livecheck.regex                 /armadillo-(\[0-9.\]+)${extract.suffix}
